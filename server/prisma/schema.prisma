// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String      @id @default(uuid())
  email        String      @unique
  streakCount  Int       @default(0) @map("streak_count")
  lastPlayed   DateTime?   @map("last_played")
  totalPoints  Int       @default(0) @map("total_points")
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  
  stats        UserStats?
  dailyScores  DailyScore[]

  @@map("users")
}

model UserStats {
  id            String   @id @default(uuid())
  userId        String   @unique @map("user_id")
  puzzlesSolved Int    @default(0) @map("puzzles_solved")
  avgSolveTime  Int    @default(0) @map("avg_solve_time") // in seconds
  
  user          User     @relation(fields: [userId], references: [id])

  @@map("user_stats")
}

model DailyScore {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  date      DateTime @db.Date // Store only the date part
  score     Int
  timeTaken Int      @map("time_taken") // in seconds
  
  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, date])
  @@map("daily_scores")
}
